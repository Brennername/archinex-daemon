{
  "storage": {
    "type": "local",
    "local": {
      "path": "~/.archinex/data/storage",
      "directoryToMonitor": "~/.archinex/data/toMonitor",
      "monitoringEnabled": true
    }
  },
  "metadata": {
    "store": {
      "type": "postgres"
    }
  },
  "postgres": {
    "jdbcUrl": "jdbc:postgresql://localhost:5432/archinex",
    "username": "archinex_user",
    "password": "archinex_password"
  },
  "journal": {
    "type": "file"
  },
  "retention": {
    "policy": {
      "type": "basic"
    }
  },
  "cache": {
    "type": "memory",
    "maxSize": 1024
  },
  "planner": {
    "threadPoolSize": 4
  },
  "policyEngine": {
    "interval": 3600
  },
  "api": {
    "port": 9876,
    "host": "localhost"
  }
}
